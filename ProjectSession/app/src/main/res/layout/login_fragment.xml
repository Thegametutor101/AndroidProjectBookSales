<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:layout_margin="15dp"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Login_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="20dp"
        android:text="Connection"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Courriel"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:text="exemple@gmail.com"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Mot de passe"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPassword"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/btnValiderLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#98E143"
            android:src="@drawable/ic_action_name_validate" />

        <ImageButton
            android:id="@+id/btnResetLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E15E5E"
            android:src="@drawable/ic_action_name_clear" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNouvelUtilisateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="#E1DFDF"
        android:padding="15dp"
        android:text="Nouvel utilisateur" />

</LinearLayout>