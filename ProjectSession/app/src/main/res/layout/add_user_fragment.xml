<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:layout_margin="15dp"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddUser_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvAddUserTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Nouvel utilsateur"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUserFirstName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Prénom"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNewUserFirstName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUserLastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Nom"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNewUserLastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Courriel"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUserPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Téléphone"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNewUserPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="15dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUserPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.7"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Mot de passe"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNewUserPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPassword"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnValiderNewUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#98E143"
            android:src="@drawable/ic_action_name_validate" />

        <ImageButton
            android:id="@+id/btnResetNewUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E15E5E"
            android:src="@drawable/ic_action_name_clear" />
    </LinearLayout>

</LinearLayout>