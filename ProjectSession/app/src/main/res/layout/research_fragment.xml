<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="15dp"
    tools:context=".Research_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_weight="0.05">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResearchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Recherche"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/tvSearchCriteria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Crtière de recherche"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rgSearchCriteria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|center_horizontal|center_vertical">

                    <RadioButton
                        android:id="@+id/rbSearchCriteriaTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titre" />

                    <RadioButton
                        android:id="@+id/rbSearchCriteriaCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catégorie" />

                    <RadioButton
                        android:id="@+id/rbSearchCriteriaAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auteur(e)" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_margin="15dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSortSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Trier par"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rgSearchSort"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_weight="0.3"
                    android:gravity="center|center_horizontal|center_vertical">

                    <RadioButton
                        android:id="@+id/rbSearchSortLowPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prix- Du moins élevé" />

                    <RadioButton
                        android:id="@+id/rbSearchSortHighPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prix-Du plus élevé" />

                    <RadioButton
                        android:id="@+id/rbSearchSortTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titre" />

                    <RadioButton
                        android:id="@+id/rbSearchSortCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catégorie" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnValidateSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:backgroundTint="#98E143"
                    android:src="@drawable/ic_action_name_validate" />

                <ImageButton
                    android:id="@+id/btnClearSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:backgroundTint="#E15E5E"
                    android:src="@drawable/ic_action_name_clear" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>